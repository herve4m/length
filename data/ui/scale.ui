<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ScaleControl" parent="GtkBox">
    <property name="margin-end">18</property>
    <property name="margin-start">18</property>
    <property name="spacing">12</property>
    <property name="hexpand">true</property>
    <child>
      <object class="GtkButton">
        <style>
          <class name="circular"/>
          <class name="flat"/>
        </style>
        <property name="tooltip-text" translatable="yes">Reduce Scale</property>
        <property name="icon-name">zoom-out-symbolic</property>
        <signal name="clicked" handler="_scale_out"/>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="scale_label">
        <style>
          <class name="pill"/>
          <class name="flat"/>
        </style>
        <property name="label" translatable="no">1</property>
        <property name="tooltip-text" translatable="yes">Reset Scale</property>
        <property name="hexpand">true</property>
        <signal name="clicked" handler="_scale_reset"/>
      </object>
    </child>
    <child>
      <object class="GtkButton">
        <style>
          <class name="circular"/>
          <class name="flat"/>
        </style>
        <property name="tooltip-text" translatable="yes">Enlarge Scale</property>
        <property name="icon-name">zoom-in-symbolic</property>
        <signal name="clicked" handler="_scale_in"/>
      </object>
    </child>
  </template>
</interface>
